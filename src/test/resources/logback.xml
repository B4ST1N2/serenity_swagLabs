<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%level] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="tasks" level="info"/>
    <logger name="steps" level="info"/>

    <root level="info">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
